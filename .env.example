# =============================================================================
# SIMPLE BLOG ENVIRONMENT VARIABLES EXAMPLE
# Copy this file to .env.local or .env.production and modify as needed
# IMPORTANT: Never commit your actual .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# COMMON SETTINGS
# -----------------------------------------------------------------------------

# Django secret key (generate a secure random key for production)
SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated list)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-production-domain.com

# -----------------------------------------------------------------------------
# ENVIRONMENT MODES
# -----------------------------------------------------------------------------

# =======================
# Production mode (Docker)
# =======================
# Django settings module
DJANGO_SETTINGS_MODULE=simple_blog.settings.production
# Debug mode
DEBUG=False
# Database (can use SQLite or PostgreSQL in production)
DJANGO_DB_ENGINE=django.db.backends.sqlite3
DJANGO_DB_NAME=/var/data/db.sqlite3
# PostgreSQL alternative (uncomment and set if used)
# DJANGO_DB_ENGINE=django.db.backends.postgresql
# DJANGO_DB_USER=your_db_user
# DJANGO_DB_PASSWORD=your_db_password
# DJANGO_DB_HOST=your_db_host
# DJANGO_DB_PORT=5432
# HTTPS settings
SECURE_SSL_REDIRECT=True

# =======================
# Development mode (Local)
# =======================
# Django settings module
# DJANGO_SETTINGS_MODULE=simple_blog.settings.local
# Debug mode
# DEBUG=True
# Database
# DJANGO_DB_ENGINE=django.db.backends.sqlite3
# DJANGO_DB_NAME=db.sqlite3
# HTTPS settings
# SECURE_SSL_REDIRECT=False

# -----------------------------------------------------------------------------
# STATIC AND MEDIA FILES
# -----------------------------------------------------------------------------
STATIC_VOLUME=./storage/static
MEDIA_VOLUME=./storage/media
DB_VOLUME=./storage/data

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1,https://your-production-domain.com
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True

SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATELIMIT_ANONYMOUS=20/minute
RATELIMIT_AUTHENTICATED=100/minute

# -----------------------------------------------------------------------------
# MISCELLANEOUS
# -----------------------------------------------------------------------------
PYTHONVERSION=3.12
